# Anthropic API key (required for extract_and_annotate)
ANTHROPIC_API_KEY=sk-ant-...

# OLS API (defaults to public EBI OLS4 endpoint)
OLS_API_URL=https://www.ebi.ac.uk/ols4/api

# BioPortal (optional; set API key to enable BioPortal fallback)
BIOPORTAL_API_KEY=
BIOPORTAL_API_URL=https://data.bioontology.org

# Default ontologies per domain (comma-separated)
DEFAULT_DISEASE_ONTOLOGIES=mondo,doid,hp
DEFAULT_CHEMICAL_ONTOLOGIES=chebi,drugbank
DEFAULT_GENE_ONTOLOGIES=hgnc,ncbigene
DEFAULT_PHENOTYPE_ONTOLOGIES=hp,mp
DEFAULT_ANATOMY_ONTOLOGIES=uberon,fma
DEFAULT_ORGANISM_ONTOLOGIES=ncbitaxon
